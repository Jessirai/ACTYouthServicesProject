<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ACT Youth Homelessness Services Directory</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-147750347-1"></script>
    <script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-147750347-1');
    </script>
</head>
<body>
    <!--New navbar-->
    <!--End New Navbar-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/img/Logo.png" class="nav-logo" alt="The ACT youth homelessness services directory logo, which depicts a stick figure, within a house, within a map pointer." />
                <div class="nav-title">
                    @Html.ActionLink("ACT Youth Homelessness Services Dirtectory", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <!--Name abbreviated for smaller viewports-->
                <div class="nav-title-small">
                    @Html.ActionLink("ACT Y.H.S.D", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Services</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <ul>
                                <li class="dropdown-item">
                                    <a href="~/Home/Servicesmenu">Services</a>
                                </li>
                                <li class="dropdown-item">
                                    <a href="~/Categories">Service Types</a>
                                </li>
                                <li class="dropdown-item">
                                    <a href="~/Location">Service Locations</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                
            </div>


        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="footer">
            <strong class="footerText">2019 Northside Community Service - Youth Engagement Team</strong>
            <ul>
                <li class="footerLink">
                    <a href="https://www.facebook.com/Y.Engage.ACT/"><img class="footerIcon" src="~/Content/img/SocialMedia/facebook.png" alt="Facebook icon" />Follow us on Facebook</a>
                </li>
                <li class="footerLink">
                    <a href="https://www.instagram.com/YEngageNCS/  "><img class="footerIcon" src="~/Content/img/SocialMedia/instagram.png" alt="Instagram icon" />Follow us on Instagram</a>
                </li>
                <li class="footerLink">
                    <a href="https://au.linkedin.com/company/northside-community-service"><img class="footerIcon" src="~/Content/img/SocialMedia/linkedin.png" alt="LinkedIn icon" />Follow us on LinkedIn</a>
                </li>
                <li class="footerLink">
                    <a href="https://twitter.com/YEngageNCS"><img class="footerIcon" src="~/Content/img/SocialMedia/twitter.png" alt="Twitter Icon" />Follow us on Twitter</a>
                </li>
            </ul>
        </div>
        @Html.Partial("_LoginPartial")
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>
