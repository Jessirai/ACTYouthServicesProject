@model IEnumerable<ACTYouthServicesWeb.Models.Service>
@{
    ViewBag.Title = "Meals";
}

<h2>Meals</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(model => model.Food == true))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ServiceID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ServiceID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ServiceID })
            </td>
        </tr>
    }

</table>
@foreach (var item in Model.Where(model => model.Food == true))
{
    <div class="card-body">
        <h3 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h3>
        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
        <a href="~/Home/Details/@Html.DisplayFor(modelItem => item.ServiceID)" class="btn btn-primary">Go to @Html.DisplayFor(modelItem => item.Name)</a>

    </div>
}
