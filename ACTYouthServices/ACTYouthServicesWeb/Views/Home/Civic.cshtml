@model IEnumerable<ACTYouthServicesWeb.Models.Service>
@{
    ViewBag.Title = "Civic";
}
<script>
    function submit() {
        var shelter = document.getElementById('shelter')
        if (shelter.checked) {
            alert('shelter is checked')
        } else {
            alert('shelter is not checked')
        }
    }
</script>
<h2>Civic</h2>
<p>
    Civic is the city centre or central business district of Canberra. Civic is commonly used to describe the CBD of
    Canberra, but can also be known as Civic Centre, City Centre, Canberra City and Canberra, but its official division
    name is City, with the postcode 2601. The services classified as being in Civic includes.
</p>
<hr />
<!--search bar to find service by search term-->
@using (Html.BeginForm())
{
    <p>
        Search for a service @Html.TextBox("SearchString")
        <input class="mainMap" type="submit" value="Find Services" onclick="showResults" />
    </p>
}
<hr />
<div class="filters">
    <h3>Filters</h3>
    <h4>Categories</h4>
    <a href="#" class="filter">Shelter</a>
    <a class="filter">Meals/Food</a>
    <a class="filter">Inclusion/Diversity</a>
    <a class="filter">Health/Wellbeing</a>
    <a class="filter">Jobs/Employment</a>
    <a class="filter">Family/Community</a>
    <a class="filter">Legal/Financial</a>
    <hr />


</div>
<div class="results">
    <h3>Search Results</h3>
    @foreach (var item in Model)
    {
        if (item.Location.Contains("Civic"))
        {
            <div class="card">
                <div class="card-body">
                    <img class="card-img-top" src="~/Content/img/Types.png" alt="four squares with the top left shaded darker">
                    <h3 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h3>
                    <p class="card-text">@Html.DisplayFor(modelitem => item.Description)</p>
                    <!--
                    <h4>@Html.DisplayNameFor(model => model.Phone): @Html.DisplayFor(modelItem => item.Phone)</h4>
                    <h4>@Html.DisplayNameFor(model => model.Location): @Html.DisplayFor(modelItem => item.Location)</h4>
                    -->
                </div>
                <a href="~/Home/Details/@Html.DisplayFor(modelItem => item.ServiceID)" class="btn btn-primary btn-block">Go to @Html.DisplayFor(modelItem => item.Name)'s page </a>
            </div>
        }
    }
</div>

